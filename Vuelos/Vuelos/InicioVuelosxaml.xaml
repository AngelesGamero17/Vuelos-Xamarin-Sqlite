<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Vuelos.InicioVuelosxaml"
             BackgroundImageSource="mapaRosa.jpg" Padding="20">
    <ContentPage.Content>
        <StackLayout Padding="50">
            <Label  Text="Alas Celestiales" HorizontalOptions="Center" VerticalOptions="Center" FontAttributes="Italic" TextColor="Black" Padding="20"/>
            <Label  Text="Viaja porque la Vida es corta y el mundo es enorme" HorizontalOptions="Center" VerticalOptions="Center" FontAttributes="Italic" TextColor="DarkBlue"/>
            <StackLayout HorizontalOptions="Center" VerticalOptions="CenterAndExpand" Padding="0,300,0,0">
            <Button x:Name="IngresoAmin" Clicked="IngresoAmin_Clicked" Text="Ingrese Administrador" BackgroundColor="#FF6AA9" TextColor="White" CornerRadius="10" Margin="0,0,0,20"/>
            <Button x:Name="IngresoUsuario" Clicked="IngresoUsuario_Clicked" Text="Ingrese Usuario" BackgroundColor="#FA57F2 " TextColor="White" CornerRadius="10"/>
        </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>