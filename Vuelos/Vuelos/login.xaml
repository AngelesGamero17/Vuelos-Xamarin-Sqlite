<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
          xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
          x:Class="Vuelos.login"
          BackgroundColor="#E8DAEF">
    <ContentPage.Content>
        <StackLayout Padding="20" Spacing="20">
            <Image Source="as.jpg" Aspect="AspectFill" HeightRequest="200">
                <Image.Clip>
                    <EllipseGeometry Center="150,100" RadiusX="150" RadiusY="100"/>
                </Image.Clip>
            </Image>
            <Label Text="Bienvenidos a Vuelos"
                VerticalOptions="Center" 
                HorizontalOptions="Center" FontSize="28" TextColor="#4B0082"/>
            <Entry x:Name="txtUsuario" Placeholder="Usuario" FontSize="16"/>
            <Entry x:Name="txtContrasena" Placeholder="Contraseña" FontSize="16" IsPassword="True"/>
            <Button x:Name="btnSesion" Text="Iniciar Sesión" Clicked="btnSesion_Clicked"
                 BackgroundColor="#4B0082" TextColor="White" FontSize="16"
                 CornerRadius="5" HeightRequest="50"/>
            <Button x:Name="btnRegistroLogin" Text="¿No tienes cuenta? Regístrate aquí"
                 Clicked="btnRegristroLogin_Clicked" BackgroundColor="Transparent"
                 TextColor="#4B0082" FontSize="14"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>